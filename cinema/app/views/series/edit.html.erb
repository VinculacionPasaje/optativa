 <% content_for :encabezado do %> 
 <section class="content-header">
          <h1>
            Serie
            <small>Editar</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Serie</a></li>
            <li class="active">Editar</li>
          </ol>
        </section>
<% end %> 

 

<div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <% flash.each do |key, value| %>

            <div class="alert alert-<%= key %> alert-dismissable">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <%= value %></div>
          <% end %>

       

       



          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Serie</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->


            <%= form_for(@serie, url: serie_path(@serie), html: {multipart: true}) do |f|%>  
            <div class="box-body">
              <div class="form-group">
                <%= f.label :name, 'Nombre'  %>
                <%= f.text_field :name, :class => "form-control", :placeholder => "Ingrese el nombre"   %>
              </div>

              <div class="form-group">
                <%= f.label :year, 'Fecha'  %>
                <%= f.date_field :year, :class => "form-control"  %>
              </div>

              <div class="form-group">
                <%= f.label :description, 'Descripcion'  %>
                <%= f.text_field :description, :class => "form-control", :placeholder => "Ingrese la descripcion"   %>
              </div>

              <div class="form-group">
                <%= f.label :director, 'Director'  %>
                <%= f.text_field :director, :class => "form-control", :placeholder => "Ingrese el director"   %>
              </div>

              <div class="form-group">
                <%= f.label :productora, 'Productora'  %>
                <%= f.text_field :productora, :class => "form-control", :placeholder => "Ingrese la productora"   %>
              </div>

              <div class="form-group">
                <%= f.label :trailer, 'Trailer'  %>
                <%= f.text_field :trailer, :class => "form-control", :placeholder => "Ingrese la productora"   %>
              </div>

              <div class="form-group">
                <%= f.label :photo, 'Imagen'  %>
                <%= f.file_field :photo, :class => "form-control"   %>
              </div>

              <div class="form-group">
                <label>Categoria</label>
                <select class="form-control select2" data-placeholder="Select a State"
                        style="width: 100%;" name="serie[category_id]">
                    <% @categories.each do |category| %>
                          <option value="<%= category.id%>"><%= category.categorie %></option>


                    <% end %>
                </select>
              </div>

              


            </div>
             <div class="box-footer">
                <%= f.submit 'Editar', :class => "btn btn-primary"  %>

            </div>
             

            <%end%>

          </div>
        </div>
  </div>

   <% content_for :script do %> 


  <script>
  $(function () {
    //Initialize Select2 Elements
    $('.select2').select2()

  })
</script>

<% end %> 