 <div class="box">
            <div class="box-header">
              <h3 class="box-title">Listado de Actores</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">

                <thead>

                <tr>
                  <th>Nombres</th>
                  <th>Apellido</th>
                  <th>Fecha de Nacimiento</th>
                  <th>Editar</th>
                  <th>Eliminar</th>
                </tr>
                </thead>
                <tbody>
                  <% @actors.each do |actor| %>

                <tr>
                  <td><%= actor.name %></td>
                  <td><%= actor.lastname %></td>
                  <td><%= actor.birthday %></td>
                  <td><%= link_to "Editar", edit_actor_path(actor), class: "btn btn-success btn-sm"%></td>
                  <!--
                  <td> <%=link_to 'Delete', actor, method: :delete, data: { confirm: 'Esta seguror de eliminar el registro?' }%></td>
                  -->
                  <td> <%=link_to 'Delete', actor, data: { confirm: 'Esta seguror de eliminar el registro?' }, class: "btn btn-danger btn-sm"%></td>



                </tr>
                <% end %>

                
                </tbody>
                
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->





 <% content_for :script do %> 
<script>
  $(document).ready(function () {
  $('*[data-confirm]').click(function(){
    return confirm($(this).attr('data-confirm'));
  });
})
  $(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>

<% end %> 