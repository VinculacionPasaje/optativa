 <% content_for :encabezado do %> 
 <section class="content-header">
          <h1>
            Actores
            <small>Editar</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Actores</a></li>
            <li class="active">Editar</li>
          </ol>
        </section>
<% end %> 

 

<div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <% flash.each do |key, value| %>

            <div class="alert alert-<%= key %> alert-dismissable">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <%= value %></div>
          <% end %>

       

       



          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Actor</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->


            <%= form_for @actor  do |f|%>
            <div class="box-body">
              <div class="form-group">
                <%= f.label :name, 'Nombre'  %>
                <%= f.text_field :name, :class => "form-control", :placeholder => "Ingrese el nombre"   %>
              </div>

              <div class="form-group">
                <%= f.label :last_name, 'Apellido'  %>
                <%= f.text_field :last_name, :class => "form-control", :placeholder => "Ingrese el nombre"   %>
              </div>

              <div class="form-group">
                <%= f.label :birthdate, 'Fecha de Nacimiento'  %>
                <%= f.date_field :birthdate, :class => "form-control" %>

              </div>


            </div>
             <div class="box-footer">
                <%= f.submit 'Agregar', :class => "btn btn-primary"  %>

            </div>
             

            <%end%>

          </div>
        </div>
  </div>