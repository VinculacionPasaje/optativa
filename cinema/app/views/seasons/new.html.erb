 <% content_for :encabezado do %> 
 <section class="content-header">
          <h1>
            Temporada
            <small>Agregar</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Temporada</a></li>
            <li class="active">Agregar</li>
          </ol>
        </section>
<% end %> 

 

<div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <% flash.each do |key, value| %>

            <div class="alert alert-<%= key %> alert-dismissable">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <%= value %></div>
          <% end %>

       

       



          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Temporada</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->


            <%= form_for(@season, html: {multipart: true}) do |f|%>
            <div class="box-body">
              <div class="form-group">
                <%= f.label :season, 'Nombre'  %>
                <%= f.text_field :season, :class => "form-control", :placeholder => "Ingrese el nombre" , :required =>'true'  %>
              </div>

              <div class="form-group">
                <%= f.label :year, 'Fecha'  %>
                <%= f.date_field :year, :class => "form-control" , :required =>'true' %>
              </div>

              <div class="form-group">
                <%= f.label :description, 'Descripcion'  %>
                <%= f.text_field :description, :class => "form-control", :placeholder => "Ingrese la descripcion", :required =>'true'   %>
              </div>

                           
              <div class="form-group">
                <%= f.label :photo, 'Imagen'  %>
                <%= f.file_field :photo, :class => "form-control", :required =>'true'   %>
              </div>

              <div class="form-group">
                <%= f.label :coverphoto, 'Portada'  %>
                <%= f.file_field :coverphoto, :class => "form-control" , :required =>'true'  %>
              </div>

              <div class="form-group">
                <label>Series</label>
                <select class="form-control select2" data-placeholder="Seleccione una serie"
                        style="width: 100%;" name="season[serie_id]" required ='true'>
                    <% @series.each do |serie| %>
                          <option value="<%= serie.id%>"><%= serie.name %></option>


                    <% end %>
                </select>
              </div>

              


            </div>
             <div class="box-footer">
                <%= f.submit 'Agregar', :class => "btn btn-primary"  %>

            </div>
             

            <%end%>

          </div>
        </div>
  </div>

   <% content_for :script do %> 


  <script>
  $(function () {
    //Initialize Select2 Elements
    $('.select2').select2()

  })
</script>

<% end %> 